{
  "name": "mitm-mock",
  "version": "1.0.0",
  "description": "一个用于事后更新模拟数据的项目",
  "main": "index.js",
  "scripts": {
    "style:prettier": "prettier --write \"src/**/*.ts\"",
    "style:lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "tsc -w ./src/test/index.ts --outDir dist/test",
    "test1": "tsc -w ./src/test/index.ts",
    "build": "tsc",
    "tsc": "tsc -w ./src/server.ts --outDir dist",
    "restart": "rimraf dist && npm run build && npm start",
    "start": "nodemon ./dist/server.js",
    "prod": "npm run build && npm run start",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -w -r 0"
  },
  "keywords": [
    "update",
    "mock",
    "data"
  ],
  "author": "shisan",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "mkdirp": "^1.0.4",
    "superagent": "^6.1.0"
  },
  "devDependencies": {
    "@types/morgan": "^1.9.2",
    "cz-conventional-changelog": "^3.3.0",
    "morgan": "^1.10.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn style",
      "commit-msg": "validate-commit-msg"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
